<icecast>
    <location>Nemačka</location>
    <admin>angeldobric@gmail.com</admin>
    <hostname>icecast2-8r1b.onrender.com</hostname>

    <limits>
        <clients>100</clients>
        <sources>5</sources>
        <queue-size>524288</queue-size>
        <client-timeout>120</client-timeout>
        <header-timeout>60</header-timeout>
        <source-timeout>120</source-timeout>
        <burst-on-connect>1</burst-on-connect>
        <burst-size>65536</burst-size>
    </limits>

    <authentication>
        <source-password>zizu</source-password>
        <relay-password>zizu</relay-password>
        <admin-user>gladijator</admin-user>
        <admin-password>zizu</admin-password>
    </authentication>

    <listen-socket>
        <port>10000</port> <!-- Render dozvoljava portove iznad 10000 -->
        <bind-address>0.0.0.0</bind-address>
    </listen-socket>

    <http-headers>
        <header name="Access-Control-Allow-Origin" value="*"/>
    </http-headers>

    <mount>
        <mount-name>/x1</mount-name>
        <password>zizu</password>
    </mount>

    <mount>
        <mount-name>/x2</mount-name>
        <password>zizu</password>
    </mount>

    <mount>
        <mount-name>/x3</mount-name>
        <password>zizu</password>
    </mount>

    <fileserve>1</fileserve>

    <paths>
        <logdir>/dev/null</logdir> <!-- Isključuje logove na disku, koristi Render logs -->
        <webroot>/usr/share/icecast/web</webroot>
        <adminroot>/usr/share/icecast/admin</adminroot>
        <alias source="/" destination="/status.xsl"/>
    </paths>

    <logging>
        <accesslog>/dev/stdout</accesslog> <!-- Logovi idu u Render logs -->
        <errorlog>/dev/stderr</errorlog>
        <loglevel>4</loglevel>
    </logging>
</icecast>
